<% include ./partials/header %>
<div class="ui main text container">
  <div class="ui huge header">RESTful Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(element => { %>
      <div class="item">
        <div class="image">
          <img src="<%=element.image%>" alt="<%=element.title%>" />
        </div>
        <div class="content">
          <a class="header" href="/blogs/<%=element._id %>"
            ><%=element.title%></a
          >
          <div class="meta">
            <span><%=element.created.toDateString() %></span>
          </div>
          <div class="description">
            <p><%-element.body.substring(0, 100)%>...</p>
          </div>
          <div class="extras">
            <a
              class="ui floated basic violet button"
              href="/blogs/<%=element._id %>"
              >Read More <i class="right chevron icon"></i
            ></a>
          </div>
        </div>
      </div>
      <%}); %>
    </div>
  </div>
</div>

<% include ./partials/footer %>
